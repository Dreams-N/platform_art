cc_binary {
    name: "dalvikvm",
    tags: ["optional"],

    srcs: ["dalvikvm.cc"],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-std=gnu++11",
    ],
    local_include_dirs: ["../runtime"],
    shared_libs: [
        "libnativehelper",
    ],
    ldflags: [
        "-Wl,--version-script,${SrcDir}/art/sigchainlib/version-script.txt",
    ],

    compile_multilib: "both",
    multilib: {
        lib32: {
            stem: "dalvikvm32",
        },
        lib64: {
            stem: "dalvikvm64",
        },
    },
    //native_coverage: ART_COVERAGE,

    target: {
        host: {
            host_ldlibs: [
                "-ldl",
                "-lpthread",
            ],
        },
        android: {
            shared_libs: [
                "liblog",
            ],
            ldflags: ["-Wl,--export-dynamic"],
        },
        linux: {
            // Mac OS linker doesn't understand --export-dynamic.
            ldflags: ["-Wl,--export-dynamic"],
        },
    },
}

