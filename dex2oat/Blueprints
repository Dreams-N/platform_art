art_cc_binary {
    name: "dex2oat",
    host_supported: true,
    srcs: ["dex2oat.cc"],
    shared_libs: [
        "libart-compiler",
    ],
    local_include_dirs: [
        "../compiler",
    ],

    target: {
        host: {
            shared_libs: ["libziparchive"],
        },
        android: {
            shared_libs: ["libcutils"],
        },
    },
}

