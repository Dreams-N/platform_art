// Note that this tool needs to be built for both 32-bit and 64-bit since it requires
// that the image it's analyzing be the same ISA as the runtime ISA.

art_cc_binary {
    name: "imgdiag",
    host_supported: true,

    srcs: ["imgdiag.cc"],
    multilib: {
        lib32: {
            suffix: "32",
        },
        lib64: {
            suffix: "64",
        },
    },
    shared_libs: [
        "libart-compiler",
        "libbacktrace",
    ],
    target: {
        android: {
            shared_libs: [
                "libcutils",
            ],
        },
        host: {
            shared_libs: [
                "libziparchive",
            ],
        },
    },
    local_include_dirs: [
        "../compiler",
    ],
    compile_multilib: "both",
}
