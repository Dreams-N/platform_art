  template <typename PassType>
  Pass* GetPassInstance() {
    static PassType pass;
    return &pass;
  }

  [...]

  static Pass* const passes[] = {
      GetPassInstance<CodeLayout>(),
      GetPassInstance<SSATransformation>(),
